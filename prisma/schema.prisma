// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model GoodsInLog {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  barcode   String
  name      String
  sku       String
  quantity  Int
  location  String
  shelf     String
}

model GoodsOutLog {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  barcode   String
  name      String
  sku       String
  quantity  Int
  location  String
  shelf     String
}

model IncomingStockLog {
  id           Int      @id @default(autoincrement())
  timestamp    DateTime @default(now())
  barcode      String
  name         String
  sku          String
  expectedDate DateTime
  quantity     Int
  supplier     String
}
